<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.my.zhang.dribbview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DribbViewApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.main.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.main.MainActivity" />
        <activity
            android:name=".dribbble.auth.AuthActivity"
            android:windowSoftInputMode="adjustPan" />
        <!-- webview input bug fix -->

        <activity android:name=".view.shot_detail.ShotActivity" />
        <activity android:name=".view.bucket_list.ChooseBucketActivity" />
        <activity android:name=".view.shot_list.BucketedShotsActivity" />
        <activity android:name=".view.user.UserActivity"></activity>
    </application>

</manifest>