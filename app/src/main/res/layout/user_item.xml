<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_small">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/follow_author_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        fresco:placeholderImage="@drawable/user_picture_placeholder"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>

    <TextView
        android:id="@+id/follow_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/follow_author_picture"
        android:layout_toRightOf="@id/follow_author_picture"
        android:textSize="24sp"
        android:textStyle="bold"
        style="@style/AppTheme.TextView.2"
        tools:text="author name" />

    <TextView
        android:id="@+id/follow_author_shot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_alignBottom="@id/follow_author_picture"
        android:layout_toRightOf="@id/follow_author_shot_pre"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/AppTheme.TextView.2"
        tools:text="123" />

    <TextView
        android:id="@+id/follow_author_shot_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_alignBottom="@id/follow_author_picture"
        android:layout_toRightOf="@id/follow_author_picture"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Total Shots: "
        style="@style/AppTheme.TextView.2"
         />

    <View
        android:id="@+id/follow_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"/>


</RelativeLayout>